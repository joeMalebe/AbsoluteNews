    <style name="app_bar_title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_text_style">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="body_text_style">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_caption" parent="body_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="text_hyper_link" parent="body_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/hyperlink_blue</item>
    </style>

    <style name="text_caption_big" parent="body_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="text_subtitle" parent="title_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="text_subtitle_bold" parent="title_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
