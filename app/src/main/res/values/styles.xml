<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="text_style">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_caption" parent="text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_hyper_link" parent="text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/hyperlink_blue</item>
    </style>

    <style name="text_subtitle" parent="text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_subtitle_bold" parent="text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
